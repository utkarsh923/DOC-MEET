        }
        
        .btn {
            background-color: white;
            color: #5B6BF9;
            padding: 12px 24px;
            border-radius: 25px;
            text-decoration: none;
            display: inline-block;
            font-weight: bold;
            border: none;
            cursor: pointer;
        }
        
        .speciality-section {
