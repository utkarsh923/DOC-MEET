            margin-bottom: 50px;
        }
        
        .speciality-section h2 {
            font-size: 1.8em;
            margin-bottom: 10px;
        }
        
        .speciality-section p {
            color: #666;
            margin-bottom: 30px;
        }
        
        .specialities {
            display: flex;
            justify-content: center;
            gap: 30px;
            flex-wrap: wrap;
        }
        
        .speciality-item {
            text-align: center;
        }
        
        .speciality-icon {
            width: 80px;
            height: 80px;
            background-color: #F0F3FF;
            border-radius: 50%;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .doctors-section {
            text-align: center;
            margin-bottom: 50px;
        }
        
        .doctors-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }
        
        .doctor-card {
            background-color: #F0F3FF;
            border-radius: 15px;
            padding: 20px;
            text-align: center;
        }
        
        .doctor-image {
            width: 120px;
            height: 120px;
            border-radius: 10px;
            margin-bottom: 15px;
            background-color: #fff;
        }
        
        .available {
            color: green;
            font-size: 0.8em;
            margin-bottom: 5px;
        }
        
        .doctor-name {
            font-weight: bold;
            margin-bottom: 5px;
        }
        
        .doctor-speciality {
            color: #666;
            font-size: 0.9em;
        }
        
        .bottom-cta {
            background-color: #5B6BF9;
            border-radius: 20px;
            padding: 40px;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .more-btn {
            background-color: #F0F3FF;
            color: #5B6BF9;
            padding: 10px 30px;
            border-radius: 20px;
            text-decoration: none;
            display: inline-block;
            margin: 30px 0;
        }
        
        @media (max-width: 768px) {
            .hero {
                flex-direction: column;
                text-align: center;
            }
            .hero-content {
                max-width: 100%;
                margin-bottom: 30px;
            }
            .doctors-grid {
                grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            }
            .bottom-cta {
                flex-direction: column;
                text-align: center;
            }
        }
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }
        
        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 5%;
            background-color: white;
        }
        
        .logo {
            color: #6C5CE7;
            font-size: 1.5rem;
            font-weight: bold;
            text-decoration: none;
        }
        
        .nav-links {
            display: flex;
            gap: 2rem;
            background-color: #EAE8FD;
            padding: 0.5rem 2rem;
            border-radius: 50px;
        }
        
        .nav-links a {
            color: #333;
            text-decoration: none;
            font-size: 1rem;
            padding: 0.5rem 1rem;
            transition: color 0.3s ease;
        }
        
        .nav-links a:hover {
            color: #6C5CE7;
        }
        
        .get-in-touch {
            background-color: #6C5CE7;
            color: white;
            padding: 0.8rem 1.5rem;
            border-radius: 50px;
            text-decoration: none;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }
        
        .get-in-touch:hover {
            background-color: #5849e0;
        }
        /* Mobile responsiveness */
        
        @media (max-width: 768px) {
            nav {
                flex-direction: column;
                gap: 1rem;
                padding: 1rem;
            }
            .nav-links {
